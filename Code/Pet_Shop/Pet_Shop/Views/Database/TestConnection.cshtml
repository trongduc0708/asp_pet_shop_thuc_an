@{
    ViewData["Title"] = "Database Test";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Database Connection Test</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsSuccess == true)
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">Success!</h4>
                            <p>@ViewBag.Message</p>
                            <hr>
                            <p class="mb-0">Database is ready for use with Entity Framework and LINQ to Entities.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error!</h4>
                            <p>@ViewBag.Message</p>
                            <hr>
                            <p class="mb-0">Please check your connection string and database setup.</p>
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
                        <a href="@Url.Action("TestConnection", "Database")" class="btn btn-secondary">Test Again</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
