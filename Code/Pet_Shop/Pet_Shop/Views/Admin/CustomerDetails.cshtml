@model Pet_Shop.Models.ViewModels.CustomerDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user"></i> Chi tiết khách hàng: @Model.Customer.FullName
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("EditCustomer", new { id = Model.Customer.UserID })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Customers")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Customer Information -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Thông tin cơ bản</h4>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>ID:</strong></td>
                                            <td>@Model.Customer.UserID</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tên đăng nhập:</strong></td>
                                            <td>@Model.Customer.Username</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Họ tên:</strong></td>
                                            <td>@Model.Customer.FullName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Email:</strong></td>
                                            <td>@Model.Customer.Email</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Số điện thoại:</strong></td>
                                            <td>@(Model.Customer.Phone ?? "Chưa cập nhật")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Địa chỉ:</strong></td>
                                            <td>@(Model.Customer.Address ?? "Chưa cập nhật")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Trạng thái:</strong></td>
                                            <td>
                                                <span class="badge badge-@(Model.Customer.IsActive ? "success" : "danger")">
                                                    @(Model.Customer.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Ngày tạo:</strong></td>
                                            <td>@Model.Customer.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Lần đăng nhập cuối:</strong></td>
                                            <td>@(Model.Customer.LastLoginDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Customer Profile -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Hồ sơ khách hàng</h4>
                                </div>
                                <div class="card-body">
                                    @if (Model.CustomerProfile != null)
                                    {
                                        <table class="table table-borderless">
                                            <tr>
                                                <td><strong>Ngày sinh:</strong></td>
                                                <td>@(Model.CustomerProfile.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Giới tính:</strong></td>
                                                <td>@(Model.CustomerProfile.Gender ?? "Chưa cập nhật")</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Hạng thành viên:</strong></td>
                                                <td>
                                                    @{
                                                        string badgeClass = Model.CustomerProfile.MembershipLevel switch
                                                        {
                                                            "Bronze" => "secondary",
                                                            "Silver" => "light",
                                                            "Gold" => "warning",
                                                            "Platinum" => "info",
                                                            _ => "secondary"
                                                        };
                                                    }
                                                    <span class="badge badge-@badgeClass">
                                                        @Model.CustomerProfile.MembershipLevel
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong>Điểm tích lũy:</strong></td>
                                                <td>@Model.CustomerProfile.Points điểm</td>
                                            </tr>
                                        </table>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Chưa có thông tin hồ sơ</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Thống kê mua hàng</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-3 col-6">
                                            <div class="small-box bg-info">
                                                <div class="inner">
                                                    <h3>@Model.Statistics.TotalOrders</h3>
                                                    <p>Tổng đơn hàng</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-6">
                                            <div class="small-box bg-success">
                                                <div class="inner">
                                                    <h3>@Model.Statistics.TotalSpent.ToString("N0")</h3>
                                                    <p>Tổng chi tiêu (VNĐ)</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-6">
                                            <div class="small-box bg-warning">
                                                <div class="inner">
                                                    <h3>@Model.Statistics.AverageOrderValue.ToString("N0")</h3>
                                                    <p>Giá trị đơn hàng TB (VNĐ)</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-chart-line"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-6">
                                            <div class="small-box bg-danger">
                                                <div class="inner">
                                                    <h3>@Model.Statistics.Points</h3>
                                                    <p>Điểm tích lũy</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-star"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (Model.Statistics.LastOrderDate.HasValue)
                                    {
                                        <div class="row mt-3">
                                            <div class="col-md-6">
                                                <div class="info-box">
                                                    <span class="info-box-icon bg-info"><i class="fas fa-calendar"></i></span>
                                                    <div class="info-box-content">
                                                        <span class="info-box-text">Đơn hàng cuối</span>
                                                        <span class="info-box-number">@Model.Statistics.LastOrderDate.Value.ToString("dd/MM/yyyy")</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="info-box">
                                                    <span class="info-box-icon bg-warning"><i class="fas fa-clock"></i></span>
                                                    <div class="info-box-content">
                                                        <span class="info-box-text">Ngày từ đơn hàng cuối</span>
                                                        <span class="info-box-number">@Model.Statistics.DaysSinceLastOrder ngày</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Addresses -->
                    @if (Model.Addresses.Any())
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Địa chỉ giao hàng</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Tên người nhận</th>
                                                        <th>Số điện thoại</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Mặc định</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var address in Model.Addresses)
                                                    {
                                                        <tr>
                                                            <td>@address.FullName</td>
                                                            <td>@address.Phone</td>
                                                            <td>@address.AddressLine</td>
                                                            <td>
                                                                @if (address.IsDefault)
                                                                {
                                                                    <span class="badge badge-success">Mặc định</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Recent Orders -->
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Đơn hàng gần đây</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Mã đơn hàng</th>
                                                        <th>Ngày đặt</th>
                                                        <th>Tổng tiền</th>
                                                        <th>Trạng thái</th>
                                                        <th>Phương thức thanh toán</th>
                                                        <th>Thao tác</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var order in Model.RecentOrders)
                                                    {
                                                        <tr>
                                                            <td>#@order.OrderID</td>
                                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                            <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                                                            <td>
                                                                @{
                                                                    string statusBadgeClass = order.Status?.StatusName switch
                                                                    {
                                                                        "Pending" => "warning",
                                                                        "Confirmed" => "info",
                                                                        "Processing" => "primary",
                                                                        "Shipped" => "success",
                                                                        "Delivered" => "success",
                                                                        "Cancelled" => "danger",
                                                                        _ => "secondary"
                                                                    };
                                                                }
                                                                <span class="badge badge-@statusBadgeClass">
                                                                    @order.Status?.StatusName
                                                                </span>
                                                            </td>
                                                            <td>@order.PaymentMethod?.MethodName</td>
                                                            <td>
                                                                <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderID })" 
                                                                   class="btn btn-info btn-sm">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
