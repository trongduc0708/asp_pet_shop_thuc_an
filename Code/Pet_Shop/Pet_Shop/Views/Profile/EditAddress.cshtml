@model Pet_Shop.Models.ViewModels.AddressViewModel
@{
    ViewData["Title"] = "Chỉnh sửa địa chỉ";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
            <!-- Profile Sidebar -->
            <div class="card">
                <div class="card-body text-center">
                    <div class="profile-avatar mb-3">
                        <i class="fas fa-user-circle fa-5x text-warning"></i>
                    </div>
                    <h5 class="card-title">@(User.Identity?.Name ?? "User")</h5>
                </div>
            </div>

            <!-- Navigation Menu -->
            <div class="card mt-3">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index")" class="list-group-item list-group-item-action">
                            <i class="fas fa-user me-2"></i>Thông tin cá nhân
                        </a>
                        <a href="@Url.Action("Edit")" class="list-group-item list-group-item-action">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin
                        </a>
                        <a href="@Url.Action("ChangePassword")" class="list-group-item list-group-item-action">
                            <i class="fas fa-key me-2"></i>Đổi mật khẩu
                        </a>
                        <a href="@Url.Action("Orders")" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-bag me-2"></i>Đơn hàng của tôi
                        </a>
                        <a href="@Url.Action("Addresses")" class="list-group-item list-group-item-action active">
                            <i class="fas fa-map-marker-alt me-2"></i>Quản lý địa chỉ
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- Edit Address Form -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa địa chỉ
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditAddress" method="post">
                        <input asp-for="AddressID" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label">Họ và tên *</label>
                                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên người nhận">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label">Số điện thoại *</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ chi tiết *</label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ chi tiết (số nhà, tên đường, tòa nhà...)"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Ward" class="form-label">Phường/Xã *</label>
                                    <input asp-for="Ward" class="form-control" placeholder="Nhập phường/xã">
                                    <span asp-validation-for="Ward" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="District" class="form-label">Quận/Huyện *</label>
                                    <input asp-for="District" class="form-control" placeholder="Nhập quận/huyện">
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">Tỉnh/Thành phố *</label>
                                    <input asp-for="City" class="form-control" placeholder="Nhập tỉnh/thành phố">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsDefault" class="form-check-input" type="checkbox">
                                <label asp-for="IsDefault" class="form-check-label">
                                    Đặt làm địa chỉ mặc định
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Addresses")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Cập nhật địa chỉ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .profile-avatar {
        border-radius: 50%;
        background: linear-gradient(135deg, #d4af37, #f4d03f);
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .list-group-item-action:hover {
        background-color: #f8f9fa;
        color: #d4af37;
    }

    .list-group-item.active {
        background-color: #d4af37;
        border-color: #d4af37;
    }
</style>
