            alert('Ch·ª©c nƒÉng ch·ªânh s·ª≠a ƒë·ªãa ch·ªâ s·∫Ω ƒë∆∞·ª£c tri·ªÉn khai');
        }

        function applyPromoCode() {
            const promoCode = $('input[name="PromoCode"]').val();
            if (!promoCode) {
                showPromoMessage('Vui l√≤ng nh·∫≠p m√£ gi·∫£m gi√°', 'warning');
                return;
            }

            // TODO: Call API to validate promo code
            $.ajax({
                url: '@Url.Action("ValidatePromoCode", "Checkout")',
                type: 'POST',
                data: { promoCode: promoCode },
                success: function(response) {
                    if (response.success) {
                        showPromoMessage(response.message, 'success');
                        $('#discountRow').show();
                        $('#discountAmount').text(response.discountAmount.toLocaleString());
                        updateOrderSummary();
                    } else {
                        showPromoMessage(response.message, 'error');
                    }
                },
                error: function() {
                    showPromoMessage('C√≥ l·ªói x·∫£y ra khi ki·ªÉm tra m√£ gi·∫£m gi√°', 'error');
                }
            });
        }

        function showPromoMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 'alert-warning';
            
            $('#promoMessage').html(`
                <div class="alert ${alertClass} alert-dismissible fade show">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
        }

        function updateOrderSummary() {
            // TODO: Calculate from actual cart data
            let subtotal = 0;
            $('.order-items .d-flex').each(function() {
                const priceText = $(this).find('.fw-bold').last().text();
                const price = parseFloat(priceText.replace(/[^\d]/g, ''));
                subtotal += price;
            });

            const shippingFee = subtotal > 500000 ? 0 : 30000;
            const discountAmount = $('#discountAmount').text() ? parseFloat($('#discountAmount').text().replace(/[^\d]/g, '')) : 0;
            const total = subtotal + shippingFee - discountAmount;

            $('#subtotal').text(subtotal.toLocaleString() + ' ‚Ç´');
            $('#shippingFee').text(shippingFee.toLocaleString() + ' ‚Ç´');
            $('#totalAmount').text(total.toLocaleString() + ' ‚Ç´');
        }

        // Form validation
        $('#checkoutForm').on('submit', function(e) {
            if (!$('input[name="AgreeToTerms"]').is(':checked')) {
                e.preventDefault();
                alert('Vui l√≤ng ƒë·ªìng √Ω v·ªõi ƒëi·ªÅu kho·∫£n s·ª≠ d·ª•ng');
                return false;
            }
        });
    </script>
