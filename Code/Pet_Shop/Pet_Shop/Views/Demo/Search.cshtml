@model IEnumerable<Pet_Shop.Models.Entities.Product>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <h2>Search Results for: "@ViewBag.SearchTerm"</h2>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <form asp-action="Search" method="get" class="d-flex">
                    <input type="text" name="searchTerm" class="form-control me-2" value="@ViewBag.SearchTerm" placeholder="Search products..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>

        @if (ViewBag.Products != null && ((IEnumerable<Pet_Shop.Models.Entities.Product>)ViewBag.Products).Any())
        {
            <div class="row">
                @foreach (var product in ViewBag.Products as IEnumerable<Pet_Shop.Models.Entities.Product>)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">
                                    <strong>Category:</strong> @product.Category.CategoryName<br>
                                    <strong>Brand:</strong> @product.Brand.BrandName<br>
                                    <strong>Type:</strong> @product.ProductType<br>
                                    <strong>Pet Type:</strong> @product.PetType
                                </p>
                                @if (!string.IsNullOrEmpty(product.ShortDescription))
                                {
                                    <p class="card-text">@product.ShortDescription</p>
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="h5 text-primary">@product.Price.ToString("C")</span>
                                        @if (product.SalePrice.HasValue)
                                        {
                                            <span class="text-muted text-decoration-line-through ms-2">@product.SalePrice.Value.ToString("C")</span>
                                        }
                                    </div>
                                    <small class="text-muted">@product.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>No products found</h4>
                <p>No products match your search criteria. Try a different search term.</p>
            </div>
        }
    }

    <div class="mt-4">
        <a href="@Url.Action("Products", "Demo")" class="btn btn-primary">View All Products</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
